{
  "name": "scanner-intercept",
  "version": "1.3.2",
  "description": "Intermediary interceptor that processes data streams from a barcode scanner in VCR mode.",
  "main": "index.js",
  "bin": "dist/index.js",
  "scripts": {
    "start": "node --import=tsx ./src/index.ts",
    "dev": "node --import=tsx --watch ./src/index.ts",
    "build": "tsc",
    "pkg": "npm run build && pkg package.json -o pkg/interceptor.exe"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/@serialport/bindings-cpp"
    ],
    "targets": [
      "node22-win-x64"
    ]
  },
  "keywords": [],
  "author": "xi-pec",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-ws": "^3.0.5",
    "@types/node": "^24.7.2",
    "@yao-pkg/pkg": "^6.8.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-ws": "^5.0.2",
    "serialport": "^13.0.0"
  }
}
